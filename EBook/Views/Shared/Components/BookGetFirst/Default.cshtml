@model BookListViewModel
    <h3>Son Eklenen Kitaplar</h3>
@foreach (var books in Model.Books)
{
    <div class="card" style="width: 18rem;">
        <img src="@books.Image" class="card-img-top img-fluid" alt="...">
        <div class="card-body">
            <h5 class="card-title">@books.BookName</h5>
            <p class="card-text">@books.Description</p>
            <a asp-controller="Home" asp-action="BookDetails" asp-route-Url="@books.Url" class="btn btn-primary btn-sm">İncele</a> @*book details altındaki product bilgisine gidiyo giderkende productid gönderiyo biz id bilgisini alıyoruz ve o id bilgisine uyan kaydı book comtroller içerisinde kullanıcılara göstericez*@
        </div>
    </div>
}