@model BauthorDetailModel

<div class="card mb-3" style="max-width: 540px;">
    <div class="row no-gutters">
        <div class="col-md-4">
            <img src="@Model.Author.Image" class="card-img" alt="...">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@Model.Author.NameSurname</h5>
                <p class="card-text">@Model.Author.Content</p>
            </div>
        </div>
    </div>
</div>

