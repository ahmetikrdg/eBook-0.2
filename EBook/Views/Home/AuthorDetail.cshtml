@model AuthorDetailModel

<div class="card" style="width: 18rem;">
    <img class="card-img-top" src="@Model.Author.Image" alt="Card image cap">
    <div class="card-body">
        <h5 class="card-title">@Model.Author.NameSurname</h5>
        <p class="card-text">@Model.Author.Description</p>
        <hr />
    </div>
    <ul class="list-group list-group-flush">
        <p class="card-text">@Model.Author.Content</p>
        <li class="list-group-item">Dapibus ac facilisis in</li>
        <li class="list-group-item">Vestibulum at eros</li>
    </ul>
    <div class="card-body">

        @foreach (var item in Model.Books)
        {
            <div class="card mb-2">
                <img class="card-img-top" src="@item.Image" alt="">
                <div class="card-body">
                    <h5 class="card-title">@item.BookName</h5>
                    <small class="text-muted">
                        <i class="fas fa-lira-sing"><h5>Sayfa Sayısı</h5> @item.Pages</i>
                    </small>
                </div>
                <div class="card-footer text-center">
                    <a asp-controller="Home" asp-action="BookDetails" asp-route-Url="@item.Url" class="btn btn-primary btn-sm">İncele</a> @*book details altındaki product bilgisine gidiyo giderkende productid gönderiyo biz id bilgisini alıyoruz ve o id bilgisine uyan kaydı book comtroller içerisinde kullanıcılara göstericez*@
                </div>
            </div>
        }


    </div>
</div>